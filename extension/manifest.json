{
    "version": "4.2.0",
    "manifest_version": 3,
    "name": "ReviewRune",
    "description": "A review analyst for amazon.com.",
    "content_scripts": [
        {
            "matches": [
                "https://*.amazon.com/*",
                "https://*.yelp.com/*",
                "https://*.tripadvisor.com/*"
            ],
            "js": [
                "./js/inject.js"
            ],
            "css": [
                "./js/App.css"
            ]
        }
    ],
    "action": {
        "default_popup": "js/index.html",
        "default_title": "ReviewRune"
    }
}